enum Permission {
  ADMIN
  USER
  LISTINGCREATE
  LISTINGUPDATE
  LISTINGDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  active: Boolean!
  permissions: [Permission] @scalarList(strategy: RELATION)
}

type Item {
  id: ID! @id
  title: String!
  description: String!
  image: String
  largeImage: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  price: Int!
  discountedPrice: Int
  sizes: [Int] @scalarList(strategy: RELATION)
  stock: Int!
  categories: [Category] @scalarList(strategy: RELATION)
  brand: Brand
  collection: Collection
}

type Category {
  id: ID! @id
  title: String!
  similarCategories: [Category] @scalarList(strategy: RELATION)
  popularity: Int
}

type Brand {
  id: ID! @id
  logo: String
  name: String!
  popularity: Int
}

type Collection {
  id: ID! @id
  name: String!
  brand: Brand
  website: String
}