enum Permission {
  ADMIN
  USER
  LISTINGCREATE
  LISTINGUPDATE
  LISTINGDELETE
  PERMISSIONUPDATE
}

enum Gender {
  MENS
  WOMENS
  UNISEX
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  active: Boolean!
  permissions: [Permission] @scalarList(strategy: RELATION)
}

type Item {
  id: ID! @id
  brand: Brand!
  categories: [Category] @scalarList(strategy: RELATION)
  collection: [Collection] @scalarList(strategy: RELATION)
  colour: String!
  createdAt: DateTime! @createdAt
  description: String!
  discountedPrice: Int
  gender: Gender
  images: [String] @scalarList(strategy: RELATION)
  material: String
  previewImage: String
  price: Int!
  sizes: [Int] @scalarList(strategy: RELATION)
  stock: Int!
  title: String!
  updatedAt: DateTime! @updatedAt
}

type Category {
  id: ID! @id
  title: String!
  popularity: Int
}

type Brand {
  id: ID! @id
  logo: String
  name: String!
  popularity: Int
  website: String
}

type Collection {
  id: ID! @id
  name: String!
  brand: Brand
}